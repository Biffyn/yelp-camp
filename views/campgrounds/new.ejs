<% include ../partials/header %>

<div class="container">
    <h1>Add A New Campground</h1>
    <form class="ui form" action="/campgrounds" method="POST">
        <div class="field">
            <label>Campground Name:</label>
            <input type="text" name="name" placeholder="campground name">
        </div>
        <div class="field">
            <label>Campground Description:</label>
            <input type="text" name="description" placeholder="campground description">
        </div>
        <div class="field">
            <label>Campground Image:</label>
            <input type="text" name="image" placeholder="add image URL">
        </div>
        <button class="ui inverted blue button" type="submit">Submit</button>
    </form>
</div>

<% include ../partials/footer %>